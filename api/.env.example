# Server Configuration
# Port for the API server (default: 5000)
PORT=5000

# Database Configuration
DATABASE_URL="file:./dev.db"

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Google AI API Key (required for LLM functionality)
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY="your-google-ai-api-key-here"

# Experiment Configuration
# Number of parameter combinations for each parameter
# Total combinations = TEMPERATURE_COMBINATIONS × TOP_P_COMBINATIONS × TOP_K_COMBINATIONS × MAX_TOKENS_COMBINATIONS
# Example: 2 × 2 × 2 × 2 = 16 total combinations
TEMPERATURE_COMBINATIONS=2
TOP_P_COMBINATIONS=2
TOP_K_COMBINATIONS=2
MAX_TOKENS_COMBINATIONS=2

# Default LLM Model
DEFAULT_MODEL=gemini-2.5-flash

# Rate Limiting Configuration (Gemini API)
# Maximum requests per minute (15 for free tier, 60 for paid tier)
MAX_REQUESTS_PER_MINUTE=10
# Maximum burst requests (how many requests can be made immediately)
MAX_BURST_REQUESTS=1
# Minimum time between requests in milliseconds
MIN_TIME_BETWEEN_REQUESTS=6000
